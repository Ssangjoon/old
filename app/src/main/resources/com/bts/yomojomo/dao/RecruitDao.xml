<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bts.yomojomo.dao.RecruitDao">
  
  <!-- 테이블의 컬럼과 객체필드를 연결한다. -->
  <resultMap type="Recruit" id="RcruitMap">
    <id column="rcu_b_no" property="no"/>
    <result column="title" property="title"/>
    <result column="content" property="content"/>
    <result column="reg_dt" property="date"/>
    <result column="view_cnt" property="viewCnt"/>
    <result column="act_local_no" property="actLocalNo"/>
    <result column="pups_no" property="purposeNo"/>
    <result column="memb_no" property="membNo"/>
  </resultMap>
  
  <resultMap type="Member" id="MemberMap">
    <id column=" memb_no" property="no"/>
    <result column="name" property="name"/>
    <result column="pwd" property="pwd"/>
    <result column="email" property="email"/>
    <result column="tel" property="tel"/>
    <result column="post_no" property="postno"/>
    <result column="base_addr" property="baseaddr"/>
    <result column="addr" property="addr"/>
    <result column="type" property="type"/>
    <result column="unsubscribe" property="unsubscribe"/>
    <result column="status" property="status"/>
    <result column="stop_dt" property="stopDt"/>
  </resultMap>
  
  <resultMap type="ActiveLocal" id="ActiveLocalMap">
    <id column="pups_no" property="no"/>
    <result column="name" property="purposeName"/>
  </resultMap>
  
  <resultMap type="Purpose" id="PurposeMap">
    <id column="act_local_no" property="no"/>
    <result column="name" property="actLocalName"/>
  </resultMap>
  
  <select id="findAll" resultMap="RcruitMap"> <!--모두조회-->
    select
      r.rcu_b_no,
      r.title,
      r.content,
      r.reg_dt,
      r.view_cnt,
      r.act_local_no,
      r.pups_no,
      r.memb_no,
      al.name,
      pp.name,
      m.name
    from
      gms_recruit r
        join gms_memb m on r.memb_no=m.memb_no
        join gms_activelocal al on r.act_local_no=al.act_local_no
        join gms_purpose pp on r.pups_no=pp.pups_no
    order by
      r.rcu_b_no desc
  </select>
  
  <select id="findByNo" resultMap="RcruitMap" parameterType="int"> <!--게시글 번호로 조회-->
    select
      rcu_b_no,
      title,
      content,
      reg_dt,
      view_cnt,
      act_local_no,
      pups_no,
      memb_no
    from
      gms_recruit 
    where 
      rcu_b_no=#{no}
  </select>
  
  <!--
  <select id="findByName" resultMap="RcruitMap" parameterType="int"> 작성자 이름으로 조회
    select
      r.rcu_b_no,
      r.title,
      r.content,
      r.reg_dt,
      r.view_cnt,
      r.act_local_no,
      r.pups_no,
      m.name
    from
      gms_recruit r
      left outer join gms_memb m on r.memb_no = m.memb_no
    where 
      m.name=#{name}
  </select>
  -->

  <insert id="insert" parameterType="Recruit">
    insert into gms_recruit(title, content, act_local_no, pups_no, memb_no) 
    values(#{title}, #{content}, #{actLocalNo}, #{purposeNo}, #{membNo} )
  </insert>
  
  <update id ="update" parameterType="Recruit">
    update gms_recruit set 
      title = #{title},
      content = #{content},
      act_local_no = #{actLocalNo},
      pups_no = #{purposeNo},
      memb_no = #{membNo}
    where 
      rcu_b_no = #{no}
  </update>
  
  <delete id="delete" parameterType="int">
    delete from gms_recruit
    where 
      rcu_b_no = #{no}
  </delete>
  
  <update id="increaseViewCount" parameterType="int">
    update gms_recruit set
      view_cnt = view_cnt + 1
    where
      rcu_b_no = #{no}
  </update>
  
  <select id ="countAll" parameterType="int">
    select count(*) from gms_recruit
  </select>
    
</mapper>