<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bts.yomojomo.dao.ApplyFormDao">
  
  <!-- 테이블의 컬럼과 객체필드를 연결한다. -->
  <resultMap type="ApplayForm" id="ApplayFormMap">
    <id column="appl_no" property="no"/>
    <result column="g_no" property="gno"/>
    <result column="memb_no" property="membno"/>
    <result column="content" property="content"/>
    <result column="appl_dt" property="date"/>
  </resultMap>

  <select id="findAll" resultMap="ApplayFormMap"> 
    select
      appl_no,
      g_no,
      memb_no,
      content,
      appl_dt
    from
      gms_applyform
    order by
      appl_no asc
  </select>
  
  <select id="findByNo" resultMap="ApplayFormMap" parameterType="int">
    select 
      appl_no,
      g_no,
      memb_no,
      content,
      appl_dt
    from 
      gms_applyform
    where 
      appl_no=#{no}
  </select>

  <insert id="insert" parameterType="ApplayForm">
    insert into gms_applyform(g_no, memb_no, content) 
    values(#{gno}, #{membno}, #{content})
  </insert>
  
  <update id ="update" parameterType="ApplayForm">
    update gms_applyform set 
      content = #{content}
    where 
      appl_no=#{no}
  </update>
  
  <select id ="countAll" parameterType="int">
    select count(*) from gms_applyform
  </select>
  
  <delete id="delete" parameterType="int">
    delete from gms_applyform
    where 
      appl_no=#{no}
  </delete>
</mapper>