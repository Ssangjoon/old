<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bts.yomojomo.dao.ActiveLocalDao">
  
  <resultMap type="ActiveLocal" id="ActiveLocalMap">
    <id column="pups_no" property="no"/>
    <result column="name" property="purposeName"/>
  </resultMap>

  <select id="findAll" resultMap="ActiveLocalMap"> 
    select
      pups_no,
      purposeName
    from
      gms_activelocal
    order by
      pups_no asc
  </select>
  
  <select id="findByNo" resultMap="ActiveLocalMap" parameterType="int">
    select 
      pups_no,
      purposeName
    from 
      gms_activelocal
    where 
      pups_no=#{pups_no}
  </select>

  <insert id="insert" parameterType="ActiveLocal">
    insert into gms_activelocal(name) 
    values(#{purposeName})
  </insert>
  
  <update id ="update" parameterType="ActiveLocal">
    update gms_activelocal set 
      name = #{name}
    where 
      pups_no = #{no}
  </update>
  
  <select id ="countAll" parameterType="int">
    select count(*) from gms_activelocal
  </select>
  
  <delete id="delete" parameterType="int">
    delete from gms_activelocal
    where 
      pups_no = #{no}
  </delete>
</mapper>