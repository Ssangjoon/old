<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bts.yomojomo.dao.AccountingCateDao">
  
  <resultMap type="AccountingCate" id="AccountingCateMap">
    <id column="act_cate_no" property="no"/>
    <result column="name" property="name"/>
  </resultMap>

  <select id="findAll" resultMap="AccountingCateMap"> 
    select
      act_cate_no,
      name
    from
      gms_accounting_cate
    order by
      act_cate_no asc
  </select>
  
  <select id="findByNo" resultMap="AccountingCateMap" parameterType="int">
    select 
      act_cate_no,
      name
    from 
      gms_accounting_cate
    where 
      act_cate_no=#{no}
  </select>

  <insert id="insert" parameterType="AccountingCate">
    insert into gms_accounting_cate(name) 
    values(#{name})
  </insert>
  
  <update id ="update" parameterType="AccountingCate">
    update gms_accounting_cate set 
      name = #{name}
    where 
      act_cate_no = #{no}
  </update>
  
  <select id ="countAll" parameterType="int">
    select count(*) from gms_accounting_cate
  </select>
  
  <delete id="delete" parameterType="int">
    delete from gms_accounting_cate
    where 
      act_cate_no = #{no}
  </delete>
</mapper>