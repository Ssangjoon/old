<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bts.yomojomo.dao.AccountingDao">
  
  <resultMap type="Accounting" id="AccountingMap">
    <id column="act_no" property="no"/>
    <result column="g_no" property="gno"/>
    <result column="title" property="title"/>
    <result column="amount" property="amount"/>
    <result column="status" property="status"/>
    <result column="reg_dt" property="date"/>
    <result column="act_cate_no" property="actcateno"/>
    <association property="actCate" javaType="AccountingCate"> 
      <id column="act_cate_no" property="no"/>
      <result column="name" property="cateName"/>
    </association>
<!--<association property="actStatus" javaType="AccountingStatus">
      <id column="act_no" property="actNo"/>
      <result column="pay_dt" property="paydt"/>
    </association>
   <association property="member" javaType="Member">
      <id column="memb_no" property="no"/>
      <result column="name" property="membName"/>
    </association>
    <association property="group" javaType="Group">
      <id column="g_no" property="no"/>
      <result column="name" property="GroupName"/>
    </association>  -->
</resultMap>

  <select id="findAll" resultMap="AccountingMap"> 
		select 
		  a.act_no,
		  a.g_no,
		  ac.name,
		  ac.act_cate_no,
		  a.title,
		  a.amount,
		  a.status,
		  a.reg_dt
		from gms_accounting a
		    inner join gms_accounting_cate ac on (a.act_cate_no=ac.act_cate_no)
		order by
		  a.act_no desc
  </select>
  
    <select id="findByNo" resultMap="AccountingMap" parameterType="int">
    select 
      a.act_no,
      a.g_no,
      ac.name,
      ac.act_cate_no,
      a.title,
      a.amount,
      a.status,
      a.reg_dt
    from gms_accounting a
        inner join gms_accounting_cate ac on (a.act_cate_no=ac.act_cate_no)
    where 
      act_no=#{no}
  </select>
  
  <insert id="insert" parameterType="Accounting">
    insert into gms_accounting(g_no,actCate,title,amount,status) 
    values(#{gno},#{actCate.no},#{title},#{amount},#{status})
  </insert>
  
  <update id ="update" parameterType="Accounting">
    update gms_accounting set 
      g_no=#{gno},
      actCate=#{actCate.no},
      title=#{title},
      amount=#{amount},
      status=#{status}
    where 
      act_no=#{no}
  </update>
  
  <select id ="countAll" parameterType="int">
    select count(*) from gms_accounting
  </select>
  
  <delete id="delete" parameterType="int">
    delete from gms_accounting
    where 
      act_no=#{no}
  </delete>
  

</mapper>