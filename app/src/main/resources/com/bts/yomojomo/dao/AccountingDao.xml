<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bts.yomojomo.dao.AccountingDao">
  
  <!-- 테이블의 컬럼과 객체필드를 연결한다. -->
  <resultMap type="Accounting" id="AccountingMap">
    <id column="act_no" property="no"/>
    <result column="g_no" property="gno"/>
    <result column="act_cate_no" property="actcateno"/>
    <result column="title" property="title"/>
    <result column="amount" property="amount"/>
    <result column="reg_dt" property="date"/>
    <result column="status" property="status"/>
  </resultMap>

  <select id="findAll" resultMap="AccountingMap"> 
    select
      act_no,
      g_no,
      act_cate_no,
      title,
      amount,
      reg_dt,
      status
    from
      gms_accounting
    order by
      act_no desc
  </select>
  
  <select id="findByNo" resultMap="AccountingMap" parameterType="int">
    select 
      act_no,
      g_no,
      act_cate_no,
      title,
      amount,
      reg_dt,
      status
    from 
      gms_accounting
    where 
      act_no=#{no}
  </select>

  <insert id="insert" parameterType="Accounting">
    insert into gms_accounting(g_no, act_cate_no, title, amount, status) 
    values(#{gno}, #{actcateno}, #{title}, #{amount}, #{status})
  </insert>
  
  <update id ="update" parameterType="Accounting">
    update gms_accounting set 
      g_no = g_no,
      act_cate_no = #{actcateno},
      title = #{title},
      amount = #{amount},
      status = #{status}
    where 
      act_no=#{no}
  </update>
  
  <select id ="countAll" parameterType="int">
    select count(*) from gms_accounting
  </select>
  
  <delete id="delete" parameterType="int">
    delete from gms_accounting
    where 
      act_no=#{no}
  </delete>
</mapper>