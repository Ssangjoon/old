<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bts.yomojomo.dao.AccountingDao">
  
  <resultMap type="Accounting" id="AccountingMap">
    <id column="act_no" property="no"/>
    <result column="g_no" property="gno"/>
    <result column="title" property="title"/>
    <result column="amount" property="amount"/>
    <result column="status" property="status"/>
    <result column="reg_dt" property="date"/>
    <association property="actCate" javaType="AccountingCate"> 
      <id column="act_cate_no" property="no"/>
      <result column="actname" property="cateName"/>
    </association>
    <association property="group" javaType="Group">
      <id column="g_no" property="no"/>
      <result column="gname" property="GroupName"/>
    </association> 
</resultMap>

  <select id="findAll" resultMap="AccountingMap"> 
		select
		  a.act_no,
		  gg.g_no,
		  gg.name gname,
		  act.act_cate_no,
		  act.name actname,
		  a.title,
		  a.amount,
		  a.reg_dt,
		  a.status
		from 
		  gms_accounting a
		  inner join gms_accounting_cate act on (a.act_cate_no = act.act_cate_no)
		  left outer join gms_group gg on (a.g_no = gg.g_no)
		order by 
		  a.act_no asc
  </select>
  
    <select id="findByNo" resultMap="AccountingMap" parameterType="int">
    select
      a.act_no,
      gg.g_no,
      gg.name gname,
      act.act_cate_no,
      act.name actname,
      a.title,
      a.amount,
      a.reg_dt,
      a.status
    from 
      gms_accounting a
      inner join gms_accounting_cate act on (a.act_cate_no = act.act_cate_no)
      left outer join gms_group gg on (a.g_no = gg.g_no)
    where 
      a.act_no=#{no}
  </select>
  
  <insert id="insert" parameterType="Accounting">
    insert into gms_accounting(g_no,act_cate_no,title,amount,status) 
    values(#{group.no},#{actCate.no},#{title},#{amount},#{status})
  </insert>
  
  <update id ="update" parameterType="Accounting">
    update gms_accounting set 
      g_no=#{group.no},
      act_cate_no=#{actCate.no},
      title=#{title},
      amount=#{amount},
      status=#{status}
    where 
      act_no=#{no}
  </update>
  
  <select id ="countAll" parameterType="int">
    select count(*) from gms_accounting
  </select>
  
  <delete id="delete" parameterType="int">
    delete from gms_accounting
    where 
      act_no=#{no}
  </delete>
  

</mapper>