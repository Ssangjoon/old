<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bts.yomojomo.dao.NoticeDao">
  
  <!-- 테이블의 컬럼과 객체필드를 연결한다. -->
  <resultMap type="Notice" id="noticeMap">
    <id column="notice_no" property="no"/>
    <result column="main_cate_no" property="mainCategoryNo" />
    <result column="cate" property="cate" />
    <result column="title" property="title" />
    <result column="content" property="content" />
    <result column="reg_dt" property="regDate" />
  </resultMap>

  <select id="findAll" resultMap="noticeMap"> 
    select
      notice_no,
      main_cate_no,
      cate,
      title,
      content,
      reg_dt
    from
      gms_notice
    order by
      notice_no asc
  </select>
  
  <select id="findByNo" resultMap="noticeMap" parameterType="int">
    select 
       notice_no,
      main_cate_no,
      cate,
      title,
      content,
      reg_dt
    from 
      gms_notice
    where 
      notice_no=#{no}
  </select>

  <insert id="insert" parameterType="Notice">
    insert into gms_notice(main_cate_no,cate,title,content,reg_dt) 
    values(1,#{cate},#{title},#{content},NOW())
  </insert>
  
  <update id ="update" parameterType="Notice">
    update gms_notice set 
      cate = #{cate},
      title = #{title},
      content = #{content},
      reg_dt = reg_dt,
      main_cate_no = main_cate_no
    where 
      notice_no = #{no}
  </update>
  
  <select id ="countAll" parameterType="int">
    select count(*) from gms_notice
  </select>
  
  <delete id="delete" parameterType="int">
    delete from gms_notice
    where 
      notice_no = #{no}
  </delete>
</mapper>