<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bts.yomojomo.dao.NoticeQuestionDao">
  
  <!-- 테이블의 컬럼과 객체필드를 연결한다. -->
  <resultMap type="NoticeQuestion" id="noticeQuestionMap">
    <!-- <id column="qno" property="no"/>
    <result column="mcate2no" property="mcate2no"/>
    <result column="queryno" property="queryno"/>
    <result column="membno" property="membno"/>
    <result column="title" property="title"/>
    <result column="content" property="content"/>
    <result column="path" property="path"/>
    <result column="querydt" property="querydt"/>
    <result column="answer" property="answer"/>
    <result column="answerdt" property="answerdt"/> -->
  </resultMap>

  <select id="findAll" resultMap="noticeQuestionMap"> 
    select
      qno,
      mcate2no,
      queryno,
      membno,
      title,
      content,
      path,
      querydt,
      answer,
      answerdt
    from
      gms_notice_question
    order by
      qno asc
  </select>
  
  <select id="findByNo" resultMap="noticeQuestionMap" parameterType="int">
    select 
      mcate2no,
      queryno,
      membno,
      title,
      content,
      path,
      querydt,
      answer,
      answerdt
    from 
      gms_notice_question
    where 
      qno=#{no}
  </select>

  <insert id="insert" parameterType="NoticeQuestion">
    insert into gms_notice_question(mcate2no,queryno,membno,title,content,path,querydt,answer,answerdt) 
    values(#{mcate2no},#{queryno},#{membno},#{title},#{content},#{path},#{querydt},#{answer},#{answerdt})
  </insert>
  
  <update id ="update" parameterType="NoticeQuestion">
    update gms_notice_question set 
      path = #{path},
      title = #{title},
      content = #{content},
      querydt = #{querydt},
      answer = #{answer},
      answerdt = #{answerdt},
      mcate2no = mcate2no,
      queryno = queryno,
      membno = membno
    where 
      qno = #{no}
  </update>
  
  <select id ="countAll" parameterType="int">
    select count(*) from gms_notice_question
  </select>
  
  <delete id="delete" parameterType="int">
    delete from gms_notice_question
    where 
      qno = #{no}
  </delete>
</mapper>