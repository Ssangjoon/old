<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bts.yomojomo.dao.CalendarDao">
  
  <!-- 테이블의 컬럼과 객체필드를 연결한다. -->
  <resultMap type="Calendar" id="CalendarMap">
    <id column="cal_no" property="no"/>
    <result column="name" property="name"/>
    <result column="content" property="content"/>
    <result column="g_no" property="gno"/>
    <result column="result_url" property="resulturl"/>
  </resultMap>

  <select id="findAll" resultMap="CalendarMap"> 
    select
      cal_no,
      name,
      content,
      g_no,
      result_url
    from
      gms_calendar
    order by
      cal_no desc
  </select>
  
  <select id="findByNo" resultMap="CalendarMap" parameterType="int">
    select 
      cal_no,
      name,
      content,
      g_no,
      result_url
    from 
      gms_calendar
    where 
      cal_no=#{no}
  </select>

  <insert id="insert" parameterType="Calendar">
    insert into gms_calendar(name, content, g_no, result_url) 
    values(#{name}, #{content}, #{gno}, #{resulturl})
  </insert>
  
  <update id ="update" parameterType="Calendar">
    update gms_calendar set 
      name = #{name},
      content = #{content},
      g_no = #{gno},
      result_url = #{resulturl}
    where 
      cal_no = #{no}
  </update>
  
  <select id ="countAll" parameterType="int">
    select count(*) from gms_calendar
  </select>
  
  <delete id="delete" parameterType="int">
    delete from gms_calendar
    where 
      cal_no = #{no}
  </delete>
</mapper>