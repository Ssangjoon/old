<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bts.yomojomo.dao.JoinMemberDao">
  
  <!-- 테이블의 컬럼과 객체필드를 연결한다. -->
  <resultMap type="JoinMember" id="JoinMemberMap">
    <id column="memb_no" property="no"/>
    <result column="g_no" property="gNo"/>
    <result column="g_memb_grd_no" property="gMembGrdNo"/>
    
  </resultMap>

  <select id="findAll" resultMap="JoinMemberMap"> 
    select
      memb_no,
      g_no,
      g_memb_grd_no
    from
      gms_join_memb
    order by
      memb_no desc
  </select>
  
  <select id="findByNo" resultMap="JoinMemberMap" parameterType="int">
    select 
      memb_no,
      g_no,
      g_memb_grd_no
    from 
      gms_join_memb
    where 
      memb_no=#{no}
  </select>

  <insert id="insert" parameterType="JoinMember">
    insert into gms_join_memb(memb_no, g_no, g_memb_grd_no)
    values(1, 2, 1)
  </insert>
  
  <update id ="update" parameterType="JoinMember">
    update gms_join_memb set 
      g_memb_grd_no = #{gmembgrdno}
    where 
      memb_no = #{no}
  </update>
  
  <select id ="countAll" parameterType="int">
    select count(*) from gms_join_memb
  </select>
  
  <delete id="delete" parameterType="int">
    delete from gms_join_memb
    where 
     memb_no = #{no}
  </delete>
</mapper>